<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userinterface.UserInterfaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20sp">

        <Button
            android:id="@+id/btn_basic_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_basic_view" />

        <Button
            android:id="@+id/btn_layouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_layouts" />

        <Button
            android:id="@+id/btn_constraint_layouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_constraint_layout" />

        <Button
            android:id="@+id/btn_dialogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_dialogs" />

        <Button
            android:id="@+id/btn_sheets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_sheets" />

        <Button
            android:id="@+id/btn_fragments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_fragments" />

        <Button
            android:id="@+id/btn_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_drawer" />

        <Button
            android:id="@+id/btn_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_tab" />

    </LinearLayout>

</ScrollView>